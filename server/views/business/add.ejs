<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="phoneTextField">business phone</label>
          <input
            type="text"
            class="form-control"
            id="phoneTextField"
            placeholder="Enter the business phone:"
            name="phone"
            required
          />
        </div>

        <div class="from-group">
          <label for="nameTextField">name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the business name :"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="emailTextField">email</label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Enter email"
            name="email"
            required
          />
        </div>

       
      

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/business-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
